{{!
    @template block_mylearning/show

    This template renders the content of the my learning block.
}}

<div data-region="mylearning">
    {{^show}}
        <div class="alert alert-warning" role="alert">
            {{#str}}notenrolled, block_mylearning{{/str}}
        </div>
    {{/show}}
    {{#show}}
        <table class="generaltable fullwidth">
            <thead>
            <tr>
                <th scope="col">{{#str}}title, block_mylearning{{/str}}</th>
                <th scope="col">{{#str}}status, block_mylearning{{/str}}</th>
                <th scope="col">{{#str}}progress, block_mylearning{{/str}}</th>
                <th scope="col">{{#str}}category, block_mylearning{{/str}}</th>
                <th scope="col">{{#str}}action, block_mylearning{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{#courses}}
                <tr>
                    <td>
                        <a href="{{link}}" alt="{{title}}">
                            {{title}}
                        </a>
                    </td>
                    <td>{{status}}</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar bg-success"
                                 role="progressbar"
                                 style="width: {{progress}}%"
                                 aria-valuenow="{{progress}}"
                                 aria-valuemin="0"
                                 aria-valuemax="100"></div>
                        </div>
                    </td>
                    <td>{{category}}</td>
                    <td align="center">
                        <a href="{{link}}" alt="{{title}}">
                            <i class="fa fa-{{icon}}" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {{/courses}}
            </tbody>
        </table>
    {{/show}}
</div>